<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@../fxcss/application.css" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.cdms.controllers.AddNewCstmrcontroller">
   <children>
      <VBox alignment="TOP_CENTER" style="-fx-background-color: #e5eaf5;;">
         <children>
            <Label prefHeight="35.0" prefWidth="272.0" style="-fx-padding: 10px; -fx-text-fill: purple; -fx-font-size: 17px;" text="Add New Customer" />
            <HBox alignment="TOP_CENTER" prefHeight="72.0">
               <children>
                  <Label prefHeight="56.0" prefWidth="167.0" style="-fx-font-size: 16px;" text="Customer Name" />
                  <JFXTextField fx:id="cstmrNm" prefHeight="56.0" prefWidth="445.0" promptText="Customer Name" styleClass="custom_textField" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="72.0">
               <children>
               		<Label prefHeight="56.0" prefWidth="167.0" style="-fx-font-size: 16px;" text="Father Name" />
                  <JFXTextField fx:id="fatherNm" prefHeight="56.0" prefWidth="445.0" promptText="Father Name" styleClass="custom_textField" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="72.0">
               <children>
               <Label prefHeight="56.0" prefWidth="167.0" style="-fx-font-size: 16px;" text="Belong Territory" />
                  <JFXComboBox fx:id="cstmrTerritory" prefHeight="56.0" prefWidth="445.0" promptText="Territory" styleClass="custom_grid_combobox" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="72.0">
               <children>
               		<Label prefHeight="56.0" prefWidth="167.0" style="-fx-font-size: 16px;" text="Mobile No" />
                  <JFXTextField fx:id="mobileNo" prefHeight="56.0" prefWidth="445.0" promptText="Mobile No" styleClass="custom_textField" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="72.0">
               <children>
               <Label prefHeight="56.0" prefWidth="167.0" style="-fx-font-size: 16px;" text="Email Id" />
                  <JFXTextField fx:id="emailId" prefHeight="56.0" prefWidth="445.0" promptText="Email Id" styleClass="custom_textField" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="72.0">
               <children>
                  <JFXButton onAction="#addNewCstmr" prefHeight="52.0" prefWidth="438.0" styleClass="custom_button" text="+ Add New Customer" />
               </children>
            </HBox>
            <HBox fx:id="messagePanel" alignment="TOP_CENTER" prefHeight="72.0" />
         </children>
      </VBox>
   </children>
</StackPane>

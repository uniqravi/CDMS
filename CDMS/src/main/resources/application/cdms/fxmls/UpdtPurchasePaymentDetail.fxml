                                    <Label alignment="CENTER_RIGHT" prefHeight="46.0" prefWidth="137.0" styleClass="value_label" text="Payment Date : " />
                                    <JFXDatePicker id="paymentDt" prefHeight="46.0" prefWidth="198.0">
